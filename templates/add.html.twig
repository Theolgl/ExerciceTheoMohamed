{% block body %}
<div style="width: 75%;">
    <h1>Cr√©er un nouvel article</h1>
    <div class="container-form">
        {{ form_start(form, {'attr': {'class': 'post form'}}) }}
            {{ form_widget(form) }}
            <div>
                <button type="submit" style="width: auto; margin-top: 20px;">Sauvegarder</button>
            </div>
        {{ form_end(form) }}
    </div>
